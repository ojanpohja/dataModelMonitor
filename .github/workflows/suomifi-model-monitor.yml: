name: Suomi.fi datamodel version monitor

on:
  schedule:
    # Daily at 06:00 UTC
    - cron: "0 6 * * *"
  workflow_dispatch:

permissions:
  contents: write

jobs:
  monitor:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          persist-credentials: true

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install requests

      - name: Run Suomi.fi model monitor
        env:
          MAILJET_API_KEY: ${{ secrets.MAILJET_API_KEY }}
          MAILJET_SECRET_KEY: ${{ secrets.MAILJET_SECRET_KEY }}
          EMAIL_FROM: ${{ secrets.EMAIL_FROM }}
          EMAIL_TO: ${{ secrets.EMAIL_TO }}
          # Optional: set to 7 to enable weekly healthcheck emails
          HEALTHCHECK_DAYS: "0"
        run: |
          python tools/monitor_suomifi_models.py

      - name: Commit state file if changed
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add .github/monitor/suomifi_state.json || true
          if ! git diff --staged --quiet; then
            git commit -m "chore(monitor): update suomifi_state.json [skip ci]" || true
            git push origin HEAD:${{ github.ref_name }} || true
            echo "State file committed and pushed."
          else
            echo "No state changes to commit."
          fi
